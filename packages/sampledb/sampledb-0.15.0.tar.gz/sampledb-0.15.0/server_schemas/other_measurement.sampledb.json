{
  "title": "Measurement Information",
  "type": "object",
  "properties": {
    "name": {
      "title": "Measurement Name",
      "type": "text",
      "default": "Measurement-",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^.+$"
    },
    "sample": {
      "title": "Sample",
      "type": "sample"
    },
    "created": {
      "title": "Creation Datetime",
      "type": "datetime"
    },
    "keywords": {
      "title": "Keywords",
      "type": "text",
      "minLength": 0
    },
    "description": {
      "title": "Description",
      "type": "text",
      "minLength": 0,
      "multiline": true
    }
  },
  "propertyOrder": ["name", "sample", "created", "keywords", "description"],
  "required": ["name", "created"],
  "displayProperties": [
    "sample",
    "keywords"
  ]
}