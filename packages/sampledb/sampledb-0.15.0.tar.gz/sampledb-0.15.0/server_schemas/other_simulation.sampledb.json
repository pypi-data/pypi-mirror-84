{
  "title": "Simulation Information",
  "type": "object",
  "properties": {
    "name": {
      "title": "Simulation Name",
      "type": "text",
      "default": "Simulation-",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^.+$"
    },
    "created": {
      "title": "Creation Datetime",
      "type": "datetime"
    },
    "program": {
      "title": "Program",
      "type": "text",
      "minLength": 1
    },
    "keywords": {
      "title": "Keywords",
      "type": "text",
      "minLength": 0
    },
    "description": {
      "title": "Description",
      "type": "text",
      "minLength": 0,
      "multiline": true
    }
  },
  "propertyOrder": ["name", "created", "program", "keywords", "description"],
  "required": ["name", "created", "program"],
  "displayProperties": [
    "program",
    "keywords"
  ]
}